{
  "name": "@stellarwp/changelogger",
  "description": "A TypeScript-based changelog management tool that works both as a GitHub Action and CLI tool",
  "version": "0.1.0",
  "author": "StellarWP",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.0",
    "commander": "^12.0.0",
    "inquirer": "^9.2.16",
    "lodash": "^4.17.21",
    "minimatch": "^10.0.1",
    "semver": "^7.6.0",
    "yaml": "^2.4.1"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">= 9.0.0"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.14",
    "@types/lodash": "^4.17.16",
    "@types/node": "^22.10.10",
    "@types/semver": "^7.5.8",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vercel/ncc": "^0.38.3",
    "concurrently": "^9.1.2",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-github": "^4.10.1",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  },
  "keywords": [
    "changelog",
    "changelogger",
    "github-actions",
    "cli"
  ],
  "license": "MIT",
  "main": "dist/src/main.js",
  "bin": {
    "changelogger": "./dist/src/cli.js"
  },
  "scripts": {
    "build": "npm run fix:format && npm run check && npm run build:compile && npm run build:package",
    "build:compile": "tsc",
    "build:package": "ncc build --source-map --license licenses.txt",
    "check": "concurrently -n check: -c red,green,blue -g npm:check:*",
    "check:build": "tsc --noEmit",
    "check:format": "prettier --check .",
    "check:lint": "eslint .",
    "fix:format": "prettier --write .",
    "test": "TS_NODE_PROJECT='tsconfig.test.json' jest --config jest.config.ts",
    "changelog": "node ./dist/src/cli.js"
  }
}
